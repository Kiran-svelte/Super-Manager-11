# =============================================================================
# Super Manager - Environment Variables Template
# Copy to .env and fill in your values
# =============================================================================

# ===== Database (Supabase) =====
SUPABASE_URL=https://hpqmcdygbjdmvxfmvucf.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
# Direct PostgreSQL connection (optional, for migrations)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.hpqmcdygbjdmvxfmvucf.supabase.co:5432/postgres

# ===== AI Providers =====
# Ollama (Local - FREE, runs locally)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI (Paid, high quality)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# Groq (Free tier, fast)
GROQ_API_KEY=gsk_your-groq-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# Zukijourney API (Free alternative)
ZUKI_API_KEY=your-zuki-key-here
ZUKI_BASE_URL=https://zukijourney.xyzbot.net/v1

# ===== Communication Plugins =====
# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Email (SMTP - Gmail example)
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===== Optional Services =====
# Zoom (for video meetings)
ZOOM_API_KEY=
ZOOM_API_SECRET=

# WhatsApp Business API
WHATSAPP_API_KEY=

# ===== Application Settings =====
# Environment
NODE_ENV=development
PYTHONUNBUFFERED=1

# Server
PORT=8000
HOST=0.0.0.0

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===== Security =====
# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# ===== Monitoring =====
# Grafana
GRAFANA_PASSWORD=admin

# Sentry (error tracking)
SENTRY_DSN=

# ===== Legacy (Firebase - deprecated) =====
# FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
